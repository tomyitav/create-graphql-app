{
  "name": "create-graphql-app",
  "version": "1.7.0",
  "description": "Cli tool for bootstrapping production grade GraphQL server",
  "keywords": [
    "graphql",
    "nodejs",
    "cli",
    "typescript",
    "apollo"
  ],
  "main": "dist/cga.umd.js",
  "module": "dist/cga.es5.js",
  "typings": "dist/types/cga.d.ts",
  "files": [
    "dist"
  ],
  "author": "Tom <tomyitav@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomyitav/create-graphql-app.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "preferGlobal": true,
  "bin": {
    "cga": "./dist/lib/cga.js"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch --verbose false",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/",
      "/test/output/actual"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 95,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.ts",
      "!src/cga.ts",
      "!src/declarations.d.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/cross-spawn": "6.0.0",
    "@types/fs-extra": "8.0.0",
    "@types/inquirer": "6.5.0",
    "@types/jest": "24.0.17",
    "@types/lodash": "4.14.136",
    "@types/node": "12.7.3",
    "@types/rimraf": "2.0.2",
    "colors": "1.3.3",
    "commitizen": "4.0.3",
    "coveralls": "3.0.5",
    "cross-env": "5.2.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "3.0.3",
    "jest": "24.8.0",
    "jest-config": "24.8.0",
    "lint-staged": "9.2.1",
    "lodash.camelcase": "4.3.0",
    "prettier": "1.18.2",
    "prompt": "1.0.0",
    "replace-in-file": "4.1.3",
    "rimraf": "2.6.3",
    "rollup": "1.19.4",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-preserve-shebang": "0.1.6",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-typescript2": "0.22.1",
    "semantic-release": "15.13.19",
    "travis-deploy-once": "5.0.11",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typedoc": "0.15.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "commander": "2.20.0",
    "cross-spawn": "6.0.5",
    "find": "0.3.0",
    "fs-extra": "8.1.0",
    "graphql-json-schema": "0.1.2",
    "inquirer": "6.5.0",
    "lodash": "4.17.15",
    "pkginfo": "0.4.1",
    "typescript-parser": "2.6.1",
    "winston": "3.2.1"
  }
}
